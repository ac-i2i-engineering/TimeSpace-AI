{
   "manifest_version": 3,
   "name": "TimeSpace",
   "version": "1.0.0",
   "description": "Experience TimeSpace alongside your calendar, email, and all other browsing.",
   "action": {
      "default_title": "Chat with Indigo",
      "default_icon": "timespace_logo.png"
   },
   "icons": {
      "128": "timespace_logo.png"
   },
   "side_panel": {
      "default_path": "index.html"
   },
   "background": {
      "service_worker": "background.js"
   },
   "permissions": ["sidePanel"]
}
